---
import "@/styles/globals.css";
import { Header } from "@/components/header/Header";
import { Footer } from "@/components/footer/Footer";
import { Tag } from "@/components/blogs/Tag";
import { TOC } from "@/components/TOC";

const { frontmatter, headings } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{frontmatter?.title + " | PRPB"}</title>
    <script>
      const preferredTheme =
        localStorage && localStorage.getItem("PRPB_THEME")
          ? localStorage.getItem("PRPB_THEME")
          : window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";

      if (preferredTheme === "dark")
        document.documentElement.classList.add("dark");

      if (localStorage) {
        const observer = new MutationObserver(() => {
          localStorage.setItem(
            "PRPB_THEME",
            document.documentElement.classList.contains("dark")
              ? "dark"
              : "light",
          );
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
  </head>
  <body class="bai-jamjuree-regular overscroll-none">
    <header>
      <Header client:load />
    </header>
    <main class="relative">
      <div
        class="max-w-screen-sm mx-auto px-4 break-word whitespace-pre-line text-wrap pt-0 md:pt-[3.4rem] relative"
      >
        <div id="content" class="py-4 md:py-6">
          {
            frontmatter?.thumbnail && (
              <div class="w-full mx-auto border rounded-xl">
                <img
                  src={`${import.meta.env.PUBLIC_SITE_URL + import.meta.env.IMAGE_ASSET_PREFIX}/${frontmatter?.slug}/thumbnail.png`}
                  data-image-component="true"
                  alt={frontmatter?.title + " thumbnail"}
                  loading="eager"
                  decoding="async"
                  class="rounded-xl select-none"
                />
              </div>
            )
          }
          <div
            class="text-4xl md:text-3xl font-semibold py-6 leading-snug md:leading-relaxed"
          >
            {frontmatter?.title}
          </div>
          <div class="flex pb-6 justify-between items-center">
            <div class="flex">
              {
                frontmatter?.category && (
                  <div class="mr-2">
                    <Tag
                      name={frontmatter.category}
                      category={frontmatter.category}
                    />
                  </div>
                )
              }
              {
                frontmatter?.category &&
                  frontmatter?.subcategory &&
                  frontmatter.subcategory.map((subcategory: string) => (
                    <div class="mr-2">
                      <Tag
                        name={subcategory}
                        category={frontmatter.category}
                        subcategory={subcategory}
                      />
                    </div>
                  ))
              }
            </div>
            <p class="text-xs opacity-70">{frontmatter?.date}</p>
          </div>
          <slot />
        </div>
      </div>
      <TOC client:load headings={headings} />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>

<style is:global>
  p {
    word-break: break-word;
    white-space: normal;
  }

  #content a {
    color: blue;
  }

  .dark #content a {
    color: lightblue;
  }

  #content a:hover {
    opacity: 0.65;
  }

  .dark #content a:hover {
    opacity: 0.85;
  }
</style>
